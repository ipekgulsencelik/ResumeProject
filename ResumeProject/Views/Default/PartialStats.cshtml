<section class="w3l-stats-section py-5" id="stats">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="w3l-stats-inner-inf py-lg-4">
            <div class="row stats-con text-center">
                <div class="col-lg-3 col-6 stats_info counter_grid">
                    <p class="counter"> @ViewBag.skillCount </p>
                    <h3>Skill Count</h3>
                </div>
                <div class="col-lg-3 col-6 stats_info counter_grid">
                    <p class="counter"> @ViewBag.serviceCount </p>
                    <h3>Service Count</h3>
                </div>
                <div class="col-lg-3 col-6 stats_info counter_grid mt-lg-0 mt-sm-5 mt-5">
                    <p class="counter"> @ViewBag.averageTechnologyValue </p>
                    <h3>Average Technology Value</h3>
                </div>
                <div class="col-lg-3 col-6 stats_info counter_grid mt-lg-0 mt-sm-5 mt-5">
                    <p class="counter"> @ViewBag.happyCustomer </p>
                    <h3>Happy Customers</h3>
                </div>
            </div>
        </div>
    </div>
</section>
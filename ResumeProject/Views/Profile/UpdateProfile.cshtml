@model ResumeProject.Models.TblProfile

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Update Profile Page</h2>

<form method="post">
    @Html.HiddenFor(x => x.ProfileID)
    <label>Profile Title</label>
    @Html.TextBoxFor(x => x.ProfileTitle, new { @class = "form-control" })
    <br />
    <label>Profile Description</label>
    @Html.TextBoxFor(x => x.ProfileDescription, new { @class = "form-control" })
    <br />
    <label>Full Name</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>Address</label>
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    <br />
    <label>Phone</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Social Media 1</label>
    @Html.TextBoxFor(x => x.SocialMedia1, new { @class = "form-control" })
    <br />
    <label>Social Media 2</label>
    @Html.TextBoxFor(x => x.SocialMedia2, new { @class = "form-control" })
    <br />
    <label>Social Media 3</label>
    @Html.TextBoxFor(x => x.SocialMedia3, new { @class = "form-control" })
    <br />
    <label>Social Media 4</label>
    @Html.TextBoxFor(x => x.SocialMedia4, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Profile</button>
</form>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Statistics Page</h2>
<br />
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-body">Request Count: @ViewBag.requestCount</div>
        </div>
        <br>
        <div class="card bg-primary text-white">
            <div class="card-body">Technology Count: @ViewBag.technologyCount</div>
        </div>
        <br>
        <div class="card bg-success text-white">
            <div class="card-body">C# Value: @ViewBag.csharpValue</div>
        </div>
        <br>
        <div class="card bg-info text-white">
            <div class="card-body">Contact Count: @ViewBag.contactCount</div>
        </div>
        <br>
        <div class="card bg-warning text-white">
            <div class="card-body">Thank Subject Count: @ViewBag.countThankSubject</div>
        </div>
        <br>
        <div class="card bg-danger text-white">
            <div class="card-body">Sum Technology Value: @ViewBag.sumTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-secondary text-white">
            <div class="card-body">Average Technology Value: @ViewBag.averageTechnologyValue</div>
        </div>
        <br>
        <div class="card bg-dark text-white">
            <div class="card-body">Subject of Third ID: @ViewBag.GetByThirdID</div>
        </div>
        <br>
        <div class="card bg-light text-dark">
            <div class="card-body">Maximum Technology Value: @ViewBag.maxTechnologyValue</div>
        </div>
    </div>
</body>
</html>